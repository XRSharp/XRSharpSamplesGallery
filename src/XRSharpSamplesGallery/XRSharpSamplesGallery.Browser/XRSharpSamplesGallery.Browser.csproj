<Project Sdk="Microsoft.NET.Sdk.BlazorWebAssembly">

  <PropertyGroup>
    <TargetFramework>net7.0</TargetFramework>
    <NoXamlPreprocessor>True</NoXamlPreprocessor>
    <OpenSilverType>4</OpenSilverType>
    <PublishTrimmed>true</PublishTrimmed>
	  <PublishIISAssets>true</PublishIISAssets>
    <!-- Uncomment to enable AOT compilation when publishing -->
    <!--<RunAOTCompilation>true</RunAOTCompilation>-->
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.AspNetCore.Components.WebAssembly" Version="7.0.*" />
    <PackageReference Include="Microsoft.AspNetCore.Components.WebAssembly.DevServer" Version="7.0.*" PrivateAssets="all" />
    <PackageReference Include="XRSharp" Version="0.1.1-*" />
  </ItemGroup>

  <PropertyGroup>
     <DisableImplicitNamespaceImports>True</DisableImplicitNamespaceImports>
  </PropertyGroup>

  <ItemGroup>
    <ProjectReference Include="..\XRSharpSamplesGallery\XRSharpSamplesGallery.csproj" />
  </ItemGroup>

  <ItemGroup>
    <Content Update="web.config">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </Content>
  </ItemGroup>

  <ItemGroup>
    <TrimmableAssembly Include="OpenSilver.Controls.Data.DataForm.Toolkit"/>
    <TrimmableAssembly Include="OpenSilver.Controls.Data"/>
    <TrimmableAssembly Include="OpenSilver.Controls.Data.Input"/>
    <TrimmableAssembly Include="OpenSilver.Controls.DataVisualization.Toolkit"/>
    <TrimmableAssembly Include="OpenSilver.Controls.Input"/>
    <TrimmableAssembly Include="OpenSilver.Controls.Layout.Toolkit"/>
    <TrimmableAssembly Include="OpenSilver.Controls.Navigation"/>
    <TrimmableAssembly Include="OpenSilver.Expression.Effects"/>
    <TrimmableAssembly Include="OpenSilver.Expression.Interactions"/>
    <TrimmableAssembly Include="OpenSilver.Interactivity"/>
  </ItemGroup>

</Project>
